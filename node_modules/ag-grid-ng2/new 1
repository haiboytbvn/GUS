fileChangeEvent(fileInput: any) {
        if (fileInput.target.files && fileInput.target.files[0]) {
            let files: FileList = fileInput.target.files;
            console.log(fileInput.target.files[0]);
            var uploaddata = new FormData();
            console.log("aaaaaaaaaaaaaaÃ¢");
            console.log(uploaddata);
          
            uploaddata.append(files[0].name, files[0]);
            console.log("bbbbb");
            console.log(uploaddata);
          // one image only
            this.colorService.uploadImage(uploaddata).subscribe((data) => {
                if (data.error == null) {
                    this.data = data;
                    this.errorMessage = 'Uploaded successfully';
                    this.displayMessage(this.errorMessage, true);
                }
                else {
                    // update failure
                    this.errorMessage = data.error;
                    this.displayMessage(this.errorMessage, false);
                }
            },
                (error) => {
                    this.errorMessage = error;
                    this.displayMessage(this.errorMessage, false);
                }
            );
        }
    }